{% extends "@App/Base/admin.html.twig" %}

{% block content_title %}
    Social Network Avaible {{ renderSnippetNew( 'social_network_avaible_new', {} ) |raw }} 
{% endblock content_title %}

{% block content %}

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#ID</th>
                <th scope="col">Name</th>
                <th scope="col">Icon</th>
                <th scope="col">Url pattern</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for socialNetworkAvaible in entities %}
                <tr>
                    <th scope="row">{{ socialNetworkAvaible.id }}</th>
                    <td>{{ socialNetworkAvaible.name }}</td>
                    <td><i class="fa fa-{{ socialNetworkAvaible.icon }}" aria-hidden="true"></i></td>
                    <td>{{ socialNetworkAvaible.urlPattern }}</td>
                    <th>
                        {{ renderSnippetUpdate( 'social_network_avaible_update', {'id': socialNetworkAvaible.id} ) |raw }}
                        {{ renderSnippetDelete( 'social_network_avaible_delete', {'id': socialNetworkAvaible.id} ) | raw }}
                    </th>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock content %}
