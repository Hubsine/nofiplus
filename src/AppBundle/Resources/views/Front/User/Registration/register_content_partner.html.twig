{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register', {'asuser': 'partner'}), 'attr': {'class': 'fos_user_registration_register'}}) }}
{{ form_errors(form) }}

<div>

    {# Username #}
    <div class="form-group">
        {{ form_label(form.username) }}
        {{ form_widget(form.username) }}
        {{ form_errors(form.username) }}
    </div>

    {# First name and last name #}
    <div class="form-row">

        <div class="form-group col-md-4">
            {{ form_label(form.gender) }}
            {{ form_widget(form.gender) }}
            {{ form_errors(form.gender) }}
        </div>
        
        <div class="form-group col-md-4">
            {{ form_label(form.firstName) }}
            {{ form_widget(form.firstName) }}
            {{ form_errors(form.firstName) }}
        </div>

        <div class="form-group col-md-4">
            {{ form_label(form.lastName) }}
            {{ form_widget(form.lastName) }}
            {{ form_errors(form.lastName) }}
        </div>
    </div>

    {# Email and repeated email #}
    <div class="form-row">
        <div class="form-group col-sm-6">
            {{ form_label(form.email.first) }}
            {{ form_widget(form.email.first) }}
            {{ form_errors(form.email.first) }}
        </div>
        <div class="form-group col-sm-6">
            {{ form_label(form.email.second) }}
            {{ form_widget(form.email.second) }}
            {{ form_errors(form.email.second) }}
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-sm-6">
            {{ form_label(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
        <div class="form-group col-sm-6">
            {{ form_label(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
    </div>

    {# Phone number mobile and fixed #}
    <div class="form-row">
        <div class="form-group col-sm-6">
            {{ form_label(form.phoneMobile) }}
            {{ form_widget(form.phoneMobile) }}
            {{ form_errors(form.phoneMobile) }}
        </div>
        <div class="form-group col-sm-6">
            {{ form_label(form.phoneFixed) }}
            {{ form_widget(form.phoneFixed) }}
            {{ form_errors(form.phoneFixed) }}
        </div>
    </div>    
        
</div>

<div class="form-group">
    <input name="submit" class="btn btn-primary" type="submit" value="{{ 'registration.submit'|trans }}" />
</div>    
{{ form_end(form) }}
